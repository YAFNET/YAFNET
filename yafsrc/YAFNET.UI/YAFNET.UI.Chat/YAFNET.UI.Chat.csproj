<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
	<Version>4.0.4</Version>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <RootNamespace>YAF.UI.Chat</RootNamespace>
    <Description>Chat UI for YAF.NET.</Description>
    <PackageId>YAFNET.UI.Chat</PackageId>
    <PackageTags>forums yaf yaf.net YetAnotherForum.net forum chat signalr</PackageTags>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
	<CompressionEnabled>false</CompressionEnabled>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\lib\chat.ts" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Include="wwwroot\lib\chat.ts" />
  </ItemGroup>

	<PropertyGroup>
		<StaticWebAssetBasePath Condition="$(StaticWebAssetBasePath) == ''">/</StaticWebAssetBasePath>
		<Title>YAF.NET Razor Pages UI</Title>
		<Company>Ingo Herbote</Company>
		<PackageIcon>yaf.png</PackageIcon>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<Authors>Ingo Herbote</Authors>
	</PropertyGroup>          
	<ItemGroup>
		<Content Remove="package.json" />
		<Folder Include="Areas\Chat\Pages\" />
		<Folder Include="wwwroot\js\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\yaf.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
	  <None Include="package.json" />
  </ItemGroup>

  <ItemGroup>
	<PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="10.0.2" />
	<PackageReference Include="SonarAnalyzer.CSharp" Version="10.19.0.132793">
	  <PrivateAssets>all</PrivateAssets>
	  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	</PackageReference>
	<PackageReference Include="YAFNET.Core" Version="4.0.4" />
	<PackageReference Include="YAFNET.Types" Version="4.0.4" />
	<PackageReference Include="YAFNET.Web" Version="4.0.4" />
  </ItemGroup>

	<Target Name="MyPreCompileTarget" BeforeTargets="Build">
		<!-- Ensure Node.js is installed -->
		<Exec Command="node --version" ContinueOnError="true">
			<Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
		</Exec>
		<Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
		<Message Importance="high" Text="WARN Make sure you have restored all dependencies using 'npm' before you build this project." />
		<Exec WorkingDirectory="$(ProjectDir)" Command="node_modules\.bin\webpack" />
	</Target>

</Project>
