<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="yafnet" type="yaf.SectionHandler,yaf" />
	</configSections>

	<yafnet>
		<dataprovider>yaf.MsSql,yaf</dataprovider>
		<connstr>user id=yaf;pwd=yafpass;data source=(local);initial catalog=yafnet_huge;timeout=90</connstr>
		<root>/yetanotherforum.net/</root>
		<language>english.xml</language>
		<theme>standard.xml</theme>
		<uploaddir>/upload/</uploaddir>
		<!--logtomail>email=;server=;user=;pass=;</logtomail-->
		<boardid>1</boardid>
	</yafnet>

	<system.web>
		<globalization requestEncoding="utf-8" responseEncoding="utf-8"/>
		<compilation defaultLanguage="c#" debug="true"/>
		<pages validateRequest="false" smartNavigation="false"/>
		<authentication mode="Forms">
			<forms name="yafdotnet" slidingExpiration="true"/>
		</authentication>
		<customErrors defaultRedirect="error.aspx" mode="RemoteOnly"/>
		<!--trace enabled="true" pageOutput="true"/-->
	</system.web>
</configuration>
