    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />
    <RemoveDir Directories ="$(MSBuildProjectDirectory)\YafDnnWhatsNewResources" />
    <RemoveDir Directories ="$(MSBuildProjectDirectory)\yafdnn-res" />


