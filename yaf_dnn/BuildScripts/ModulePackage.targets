    <Copy SourceFiles="@(yafsrcInclude)" DestinationFolder="$(MSBuildProjectDirectory)\Package\YetAnotherForum.NET\%(RecursiveDir)" />
    <Copy SourceFiles="@(yaf_dnnInclude)" DestinationFolder="$(MSBuildProjectDirectory)\Package\YAF.DotNetNuke.Module\%(RecursiveDir)" />

