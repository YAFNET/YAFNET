    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)_$(YAFVersion).$(Extension)" />
    <Delete Files="$(MSBuildProjectDirectory)\$(PackageName)_$(YAFVersion)-SRC.$(Extension)" />

    <RemoveDir Directories ="$(MSBuildProjectDirectory)\Package" />

